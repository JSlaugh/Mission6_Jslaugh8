@{
    ViewData["Title"] = "Video Library";
}

@model List<Movie>
<table class="table table-bordered table-dark table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Movie Id</td>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
            {
        <tr>
            <td>@movie.MovieId</td>
            <td>@movie.Category.CategoryName</td>
            <td>@movie.Title</td>
            <td>@movie.Year</td>
            <td>@movie.Director</td>
            <td>@movie.Rating</td>
            <td>@movie.Edited</td>
            <td>@movie.LentTo</td>
            <td>@movie.Notes</td>
            <td>
                <a asp-controller="Form" asp-action="Edit" asp-route-movieid="@movie.MovieId" class="text-white">Edit</a>
                <a asp-controller="Form" asp-action="Delete" asp-route-movieid="@movie.MovieId" class="text-white">Delete</a>
                
            </td>

        </tr>
            }
    </tbody>
</table>