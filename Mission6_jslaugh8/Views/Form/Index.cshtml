
@{
    ViewData["Title"] = "Form";
}

@model Mission6_jslaugh8.Models.Movie

<h1 class="card-title">Form</h1>

<h2 class="card-subtitle">Fill out this form to add a new movie to the database</h2>
<form method="post">

    <label for="Category">Category</label><input id="Category" type="text" name="Category" />
    <label for="Title">Title</label><input id="Title" type="text" name="Title" />
    <label for="Year">Year</label><input id="Year" type="number" name="Year" min="1850" step="1" />
    <label for="Director">Director</label><input id="Director" type="text" name="Director" />

    <!--Raing Dropdown-->
    <label for="Rating">Rating</label>
    <select id="Rating" name="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>

    <!--Radio Button Section for Edit-->
    
    <fieldset style="border:0; margin-top:5px;">
        <legend>Edited</legend>
        <label for="True">True</label><input id="True" type="radio" name="Edited" value="true" />
        <label for="False">False</label><input id="False" type="radio" name="Edited" value="false" />
    </fieldset>
    <!--A name of a person probably string-->
    <label for="LentTo">Lent To</label><input id="LentTo" type="text" name="LentTo" />
    <!-- Notes limit 25 -->
    <label for="Notes">Notes</label><input id="Notes" type="text" name="Notes" />
    <br />
    <button type="submit">Submit</button>

    <div asp-validation-summary="All"></div>
</form>


