
@{
    ViewData["Title"] = "Form";
}

@model Mission6_jslaugh8.Models.Movie;

<h1 class="card-title">Form</h1>

<h2 class="card-subtitle">Fill out this form to add a new movie to the database</h2>
<form class="card" method="post">

    <label asp-for="CategoryId">Category</label>
    <select asp-for="CategoryId">
        <option value="">Select a category</option>
        @foreach (MovieCategory category in ViewBag.Categories)
        {
            <option value="@category.CategoryId">@category.CategoryName</option>
        }

    </select>

    <label asp-for="Title">Title</label><input asp-for="Title"/>
    <label asp-for="Year">Year</label><input asp-for="Year" min="1850" step="1" />
    <label asp-for="Director">Director</label><input asp-for="Director" />

    <!--Raing Dropdown-->
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>

    <!--Radio Button Section for Edit-->

    <fieldset style="border:0; margin-top:5px;">
        <legend>Edited</legend>
        <label asp-for="Edited">True</label><input asp-for="Edited" type="radio" value="true" />
        <label asp-for="Edited">False</label><input asp-for="Edited" type="radio" value="false" />
    </fieldset>
    <!--A name of a person probably string-->
    <label asp-for="LentTo">Lent To</label><input asp-for="LentTo" />
    <!-- Notes limit 25 -->
    <label asp-for="Notes">Notes</label><input asp-for="Notes"/>
    <br />
    <button type="submit">Submit</button>

    <div asp-validation-summary="All"></div>
</form>


